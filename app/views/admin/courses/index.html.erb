<h1>Listing of courses</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>Status</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%=h course.name %></td>
    <td><%=h course.starts_at %></td>
    <td><%=h course.ends_at %></td>
    <td><%=h course.status %></td>
    <td><%= link_to 'Show', admin_course_path(course) %></td>
    <td><%= link_to 'Edit', edit_admin_course_path(course) %></td>
    <td><%= link_to 'Destroy', admin_course_path(course), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if logged_in? %>
<%= link_to 'New course', new_admin_course_path %>
<% end %>