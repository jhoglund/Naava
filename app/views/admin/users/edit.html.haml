%h1 Editing user
- form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :login
    %br/
    = f.text_field :login
  %p
    = f.label :phone
    %br/
    = f.text_field :phone
  %p
    = form.label :password, form.object.new_record? ? nil : "Change password"
    %br/
    = form.password_field :password
    %br/
  %p
    = form.label :password_confirmation
    %br/
    = form.password_field :password_confirmation
    %br/
  %p
    = f.submit 'Update'
= link_to 'Show', @user
|
\#{link_to 'Back', users_path}
