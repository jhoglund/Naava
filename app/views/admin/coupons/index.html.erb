<h1>Listing coupons</h1>

<table>
  <tr>
    <th>To name</th>
    <th>To email</th>
    <th>To phone</th>
    <th>From name</th>
    <th>From email</th>
    <th>From phone</th>
    <th>Message</th>
    <th>Coupon type</th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.to_name %></td>
    <td><%= coupon.to_email %></td>
    <td><%= coupon.to_phone %></td>
    <td><%= coupon.from_name %></td>
    <td><%= coupon.from_email %></td>
    <td><%= coupon.from_phone %></td>
    <td><%=truncate coupon.message %></td>
    <td><%= coupon.coupon_type.name %></td>
    <td><%= link_to 'Show', admin_coupon_path(coupon) %></td>
    <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
    <td><%#= link_to 'Destroy', user_admin_coupon_type_path(coupon), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

