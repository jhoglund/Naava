<%= form.error_messages %>
<%= hidden_field_tag :class_type_name, @coupon.class.name.tableize.singularize %>

<p>
  <%= form.label :to_name %><br />
  <%= form.text_field :to_name %>
</p>
<p>
  <%= form.label :to_email %><br />
  <%= form.text_field :to_email %>
</p>
<p>
  <%= form.label :to_phone %><br />
  <%= form.text_field :to_phone %>
</p>
<p>
  <%= form.label :to_address %><br />
  <%= form.text_field :to_address %>
</p>
<p>
  <%= form.label :from_name %><br />
  <%= form.text_field :from_name %>
</p>
<p>
  <%= form.label :from_email %><br />
  <%= form.text_field :from_email %>
</p>
<p>
  <%= form.label :from_phone %><br />
  <%= form.text_field :from_phone %>
</p>
<p>
  <%= form.label :from_address %><br />
  <%= form.text_field :from_address %>
</p>
<%- if @coupon.new_record? -%>
<p>
  <%= form.label :coupon_type %><br />
  <%= form.select :coupon_type_id, options_for_select(CouponType.all.collect{|t| ["#{t.name} (#{t.class.human_name})", t.id]}), :selected => nil %>
</p>
<%- end -%>
<p>
  <%= form.label :valid_from %><br />
  <%= form.datetime_select :valid_from %>
</p>
<p>
  <%= form.label :valid_to %><br />
  <%= form.datetime_select :valid_to, :default => Time.now + 1.year %>
</p>

<p>
  <%= form.label :message %><br />
  <%= form.text_area :message %>
</p>
