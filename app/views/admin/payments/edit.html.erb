<h1>Editing payment for <%= link_to 'Booking', polymorphic_path(@payment) %>
</h1>

<% form_for(@payment, :url => admin_payment_path(@payment)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note, :rows => 5 %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta, :rows => 5 %>
  </p>
  <% unless @payment.item.paid? %>
  <p>
    <%= label_tag 'Bankgiro avinummer' %><br />
    <%= text_field_tag :avinr %>
  </p>
  <p>
    <%= label_tag 'Bankgiro inbetald summa' %><br />
    <%= text_field_tag :gross %>
  </p>
  <% end %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_payment_path(@payment) %> |
<%= link_to 'Back', admin_payments_path %>