      var parkingwindow = new google.maps.InfoWindow({ content: "<b>Parkering</b><br>Antingen parkerar du på gatan eller på parkeringen längs med Ågatan." });
      var marker = new google.maps.Marker({
            position: new google.maps.LatLng(56.172058,14.860364), 
            map: map, 
            title:"Här hittar du Naava Yoga"
        });
      var parking = new google.maps.Marker({
            position: new google.maps.LatLng(56.172058,14.8586), 
            map: map, 
            title:"Parkering"
        });
      
      //parking.click = function(){ parkingwindow.open(map, parking) };
        //parkingwindow.open(map, parking);
        infowindow.open(map, marker);
        
    }
    window.onload = initialize
  </script>
<% end %>

