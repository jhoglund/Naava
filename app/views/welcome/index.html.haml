      %p{:style => "font:normal 12px/18px verdana"}
        = link_to 'Jonas Höglund', instructor_path(@jonas)
        %img{:alt => "Jonas Headshot", :height => "66", :src => "/images/jonas_headshot.jpg", :style => "float:left;margin:0 10px 10px 0", :width => "100"}/
        %br/
        Yoga-instruktör Nava Yoga-studio
  .promotion-box
    .promotion-box-line
