- content_for :header do
  %script{ :type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=false&language=sv-SE" }
  %script{ :type => "text/javascript", :src => "http://widgets.twimg.com/j/2/widget.js" }
  :javascript
    var tag = document.createElement('script');
    tag.src = "http://www.youtube.com/player_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
    
    var player;
    function onYouTubePlayerAPIReady() {
      player = new YT.Player('player', {
        height: '510',
        width: '853',
        videoId: 'bG1i8rc4WmQ',
        playerVars:{
          controls:0
        },
        events: {
          'onReady': onPlayerReady,
          'onStateChange': onPlayerStateChange
        }
      });
    }
    
    function onPlayerReady(event) {
      event.target.setVolume(30);
    }
    
    var done = false;
    function onPlayerStateChange(event) {
      //if (event.data == YT.PlayerState.PLAYING && !done) {
      //  setTimeout(stopVideo, 6000);
      //  done = true;
      //}
    }
    
    function stopVideo() {
      player.stopVideo();
    }
    
    
    function youTubeInNewWindow(){
      window.location = "http://www.youtube.com/watch?v=bG1i8rc4WmQ";
    }
      
    function initialize() {
      $("#video_placeholder").overlay({
        mask: {
      		color: '#000',
      		loadSpeed: 200,
      		opacity: 0.7,
      		zIndex:100
      	},
      	closeOnClick: false,
      	onBeforeLoad: function(){
      	  if(player.playVideo){
      		  player.playVideo();
      	  }else{
      	    youTubeInNewWindow();
      	  }
    		},
    		onClose: function(){
    		  player.stopVideo();
    		}
      });
      
    }
    window.onload = initialize

