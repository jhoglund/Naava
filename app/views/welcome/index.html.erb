<% content_for :header do %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=sv-SE"></script>
  <script type="text/javascript">
    function initialize() {
      var latlng = new google.maps.LatLng(56.172058,14.860364);
      var myOptions = {
        zoom: 16,
        disableDefaultUI: true,
        center: latlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
      var marker = new google.maps.Marker({
            position: latlng, 
            map: map, 
            title:"Här hittar du Naava Yoga"
        });
        var infowindow = new google.maps.InfoWindow({ content: "<b>Här hittar du Naava Yoga</b><br>Lorem ipsum dolor sit amet.<br> Ut enim ad minim veniam quis." });
        //infowindow.open(map,marker);
        
    }
    window.onload = initialize
  </script>
<% end %>

<% content_for :top do %>
<div class="main-promotion">
  <h1>Skänk yoga i julklapp</h1>
  Överaska någon i jul med ett presentkort till<br> någon
  av våra kurser eller klasser.
  Om du<br> vill kan du <span style="color:rgb(255,150,95)">skriva ut presentkortet</span> direkt<br> på din skrivare.
  Välj ett av våra <%= @gift_certificate_types.size %> alternativ. 
  <ul>
    <% @gift_certificate_types.each do |gift_certificate| %>
    <li><%= link_to "#{gift_certificate.title} (#{number_to_currency(gift_certificate.value)})", new_gift_certificate_path(:coupon_type_id => gift_certificate.id)  %></li>
    <% end %>
  </ul>
    
</div>
