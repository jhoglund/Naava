- @background = 'omstudion'
- content_for :header do
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false&language=sv-SE", :type => "text/javascript"}
  :javascript
    function initialize() {
      var myOptions = {
        zoom: 16,
        disableDefaultUI: false,
        center: new google.maps.LatLng(56.172858,14.860364),
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
      var infowindow = new google.maps.InfoWindow({ content: "<b>Nava Yoga Studio</b><br>Parkerar gör du bäst<br> på gatan eller på parkeringen<br> längs med Ågatan." });
      var parkingwindow = new google.maps.InfoWindow({ content: "<b>Parkering</b><br>Antingen parkerar du på gatan eller på parkeringen längs med Ågatan." });
      var marker = new google.maps.Marker({
            position: new google.maps.LatLng(56.172058,14.860364), 
            map: map, 
            title:"Här hittar du Naava Yoga"
        });
      var parking = new google.maps.Marker({
            position: new google.maps.LatLng(56.172058,14.8586), 
            map: map, 
            title:"Parkering"
        });
      
      //parking.click = function(){ parkingwindow.open(map, parking) };
        //parkingwindow.open(map, parking);
        infowindow.open(map, marker);
        
    }
    window.onload = initialize

