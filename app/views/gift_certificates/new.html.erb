<h2>Presentkort för <%= @gift_certificate.coupon_type.name %> (<%= number_to_currency(@gift_certificate.coupon_type.value) %>)</h2>
<p><%= @gift_certificate.coupon_type.description %></p>
<% form_for(@gift_certificate) do |f| %>
  <%= base_errors_for(@gift_certificate) %>
<div class="columns three-columns gift-certificate">
  <div class="column" style="width:200px">
    <h3>Till</h3>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:to_name) %>
      <%= f.text_field :to_name %>
    </p>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:to_email) %>
      <%= f.text_field :to_email %>
    </p>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:to_phone) %>
      <%= f.text_field :to_phone %>
    </p>
    <!-- <p>
      <%= f.label GiftCertificate.human_attribute_name(:to_address) %>
      <%= f.text_area :to_address, :rows => 4 %>
    </p> -->
  </div>
  <div class="column" style="width:200px">
    <h3>Från</h3>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:from_name) %>
      <%= f.text_field :from_name %>
    </p>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:from_email) %>
      <%= f.text_field :from_email %>
    </p>
    <p>
      <%= f.label GiftCertificate.human_attribute_name(:from_phone) %>
      <%= f.text_field :from_phone %>
    </p>
    <!-- <p>
      <%= f.label GiftCertificate.human_attribute_name(:from_address) %>
      <%= f.text_area :from_address, :rows => 4 %>
    </p> -->
  </div>
  <div class="column" style="width:300px">
    <h3><%= GiftCertificate.human_attribute_name(:message) %>:</h3>
    <p>
      <%= f.text_area :message, :rows => 11 %>
    </p>
    <p style="text-align:right; margin-top:30px">
      <%= link_to_function "Köp presentkort för <b>#{number_to_currency(@gift_certificate.coupon_type.value)}</b>", 'forms["new_gift_certificate"].submit()', :class => 'button button-default' %>
    </p>
    
  </div>
</div>
    <%= f.hidden_field :coupon_type_id %>
<% end %>
